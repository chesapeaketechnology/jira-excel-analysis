<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.CheckTreeView?>
<?import java.net.URL?>
<GridPane alignment="center" hgap="10" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="382.0" prefWidth="540.0" styleClass="root" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.chesapeake.technology.ui.fx.ConfigurationController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>
    <CheckTreeView fx:id="jiraTreeView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   prefHeight="10000.0" prefWidth="10000.0" showRoot="false" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                   GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </CheckTreeView>
    <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <children>
            <CheckBox fx:id="masterCheckBox" alignment="TOP_LEFT" mnemonicParsing="false" selected="true"
                      text="Goal Summary"/>
            <CheckBox fx:id="developerMetricsCheckBox" alignment="TOP_LEFT" mnemonicParsing="false" selected="true"
                      text="Individual Metrics">
                <HBox.margin>
                    <Insets left="30.0"/>
                </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="summaryCheckBox" alignment="TOP_LEFT" mnemonicParsing="false" selected="true"
                      text="Summary Metadata">
                <HBox.margin>
                    <Insets left="30.0"/>
                </HBox.margin>
            </CheckBox>
        </children>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button fx:id="generateReportButton" disable="true" onAction="#generateReportAction" text="Generate">
            <HBox.margin>
                <Insets top="20.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <Text id="reportTitle" text="Configure Report" GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>
    <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" prefWidth="453.0" progress="0.0"
                 GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="6">
        <GridPane.margin>
            <Insets bottom="10.0" top="10.0"/>
        </GridPane.margin>
    </ProgressBar>
    <stylesheets>
        <URL value="@jira.css"/>
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0"/>
        <RowConstraints prefHeight="20.0"/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
